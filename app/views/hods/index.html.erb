<h1>Listing hods</h1>

<table border="1">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Department</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hods.each do |hod| %>
      <tr>
        <td><%= hod.employee.name %></td>
        <td><%= hod.department.name %></td>
        <td><%= link_to 'Show', hod %></td>
        <td><%= link_to 'Edit', edit_hod_path(hod) %></td>
        <td><%= link_to 'Destroy', hod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

